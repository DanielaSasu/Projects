<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#00646e"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/emailBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="92.5dp"
        android:layout_marginLeft="92.5dp"
        android:layout_marginEnd="92.5dp"
        android:layout_marginRight="92.5dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#fff4d8"
        />
//ceva
    <EditText
        android:id="@+id/passwordBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="92.5dp"
        android:layout_marginLeft="92.5dp"
        android:layout_marginEnd="92.5dp"
        android:layout_marginRight="92.5dp"
        android:layout_marginBottom="55dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#fff4d8"
        />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="153.5dp"
        android:layout_marginLeft="153.5dp"
        android:layout_marginEnd="153.5dp"
        android:layout_marginRight="153.5dp"
        android:layout_marginBottom="134dp"
        android:backgroundTint="@color/button_background_color"
        android:text="Login"
        android:textColor="#fff4d8"
     />

    <TextView
        android:id="@+id/registerText"
        android:layout_width="116dp"
        android:layout_height="51dp"
        android:layout_below="@+id/loginButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="147.5dp"
        android:layout_marginLeft="147.5dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="147.5dp"
        android:layout_marginRight="147.5dp"
        android:layout_marginBottom="64dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Register now"
        android:textColor="#fff4d8" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="291dp"
        android:layout_height="263dp"
        android:layout_above="@+id/emailBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="58dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="41dp"
        app:srcCompat="@drawable/logo" />

</RelativeLayout>